{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleAnswer",
  "description": "Responses from handle functions",
  "anyOf": [
    {
      "description": "response from setting or creating a viewing key",
      "type": "object",
      "required": [
        "viewing_key"
      ],
      "properties": {
        "viewing_key": {
          "type": "object",
          "required": [
            "key"
          ],
          "properties": {
            "key": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "description": "response from withdrawing a hero from the bullpen",
      "type": "object",
      "required": [
        "chicken_out"
      ],
      "properties": {
        "chicken_out": {
          "type": "object",
          "required": [
            "message"
          ],
          "properties": {
            "message": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "description": "response from changing the admin address",
      "type": "object",
      "required": [
        "change_admin"
      ],
      "properties": {
        "change_admin": {
          "type": "object",
          "required": [
            "new_admin"
          ],
          "properties": {
            "new_admin": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "description": "response from starting/stopping battles",
      "type": "object",
      "required": [
        "set_battle_status"
      ],
      "properties": {
        "set_battle_status": {
          "type": "object",
          "required": [
            "battles_have_halted"
          ],
          "properties": {
            "battles_have_halted": {
              "type": "boolean"
            }
          }
        }
      }
    },
    {
      "description": "response from adding a new card contract",
      "type": "object",
      "required": [
        "add_card_contract"
      ],
      "properties": {
        "add_card_contract": {
          "type": "object",
          "required": [
            "card_contract"
          ],
          "properties": {
            "card_contract": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    },
    {
      "description": "response from adding auto-send addresses",
      "type": "object",
      "required": [
        "add_bots"
      ],
      "properties": {
        "add_bots": {
          "type": "object",
          "required": [
            "added_bots"
          ],
          "properties": {
            "added_bots": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/HumanAddr"
              }
            }
          }
        }
      }
    },
    {
      "description": "response from removing auto-send addresses",
      "type": "object",
      "required": [
        "remove_bots"
      ],
      "properties": {
        "remove_bots": {
          "type": "object",
          "required": [
            "removed_bots"
          ],
          "properties": {
            "removed_bots": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/HumanAddr"
              }
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "HumanAddr": {
      "type": "string"
    }
  }
}
